{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "target": "es2015",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "./node_modules/@types",
      "./custom_typings"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
